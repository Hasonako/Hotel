<Page x:Class="Hotel.Pages.BlockedAccPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BlockedAccPage">

    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Padding="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="120">
                <Label HorizontalContentAlignment="Center">
                    <TextBlock FontSize="16" TextAlignment="Center">Ваша учетная запись заблокирована<LineBreak/>Обратитесь к администратору</TextBlock>
                </Label>
                <Button Name="Exit" Width="150" Height="30" Content="Выход" Click="Exit_Click" Margin="20"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
