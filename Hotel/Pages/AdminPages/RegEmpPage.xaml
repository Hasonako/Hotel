<Page x:Class="Hotel.Pages.AdminPages.RegEmpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel.Pages.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegEmpPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Width="250" Height="300">
            <Label HorizontalAlignment="Center" Margin="5" Content="Логин"/>
            <TextBox Name="log" Margin="5"/>
            <Label HorizontalAlignment="Center" Margin="5" Content="Пароль"/>
            <TextBox Name="passwd" Margin="5"/>
            <Button Name="Reg" Content="Зарегистрировать" Width="150" Height="25" Margin="20"/>
        </StackPanel>
    </Grid>
</Page>
