<Page x:Class="Hotel.Pages.ManagerPages.RoomsStatusPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel.Pages.ManagerPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RoomsStatusPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Height="25" Grid.Row="0">
            <Label Content="Этаж: "/>
            <ComboBox Name="cmbFloorNumber" Width="100" SelectionChanged="cmbFloorNumber_SelectionChanged"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <DataGrid Name="dgrRoomsStatus" IsReadOnly="True" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Номер комнаты" Binding="{Binding roomNumber}" Width="150"/>
                    <DataGridTextColumn Header="Категория" Binding="{Binding Category.categoryName}" Width="300"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding Status.statusName}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
