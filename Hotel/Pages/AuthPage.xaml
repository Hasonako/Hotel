<Page x:Class="Hotel.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel Width="200" Height="250">
            <Label Content="Логин" HorizontalAlignment="Center" Margin="10"/>
            <TextBox Name="log"  Width="150" HorizontalContentAlignment="Center"/>
            <Label Content="Пароль" HorizontalAlignment="Center" Margin="10"/>
            <PasswordBox Name="passwd" PasswordChar="*" Width="150" HorizontalContentAlignment="Center"/>
            <Label Name="wrong" HorizontalAlignment="Center" Margin="10"/>
            <Button Name="LogIn" Height="20" Width="100" Margin="30" Content="Вход"/>
        </StackPanel>
    </Grid>
</Page>
